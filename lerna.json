{
  "packages": ["packages/*"],
  "version": "independent",
  "npmClient": "yarn",
  "workspaces": true,
  "ignoreChanges": ["**/__tests__/**", "**/*.md", "**/.storybook/**"],
  "command": {
    "version": {
      "conventionalCommits": true,
      "message": "chore(release): Publish"
    },
    "publish": {
      "registry": "https://npm.pkg.github.com"
    }
  }
}
